<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_scenario_scen_three"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wiehan.kate_app_final.Activity_Scenario_ScenThree">

    <TextView
        android:id="@+id/textScenario_Scen4"
        android:background="@drawable/my_personal_border"
        android:typeface="sans"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Scenario"
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Continue to View Data"
        android:id="@+id/buttonContinue_Scen4"
        android:layout_height="75dp"
        style="@android:style/Widget.DeviceDefault.Light.Button.Inset"
        android:background="@drawable/my_personal_buttons"
        android:textSize="18sp"
        android:layout_width="250dp"
        android:layout_marginEnd="37dp"
        android:layout_alignBaseline="@+id/textScenario_Scen4"
        android:layout_alignBottom="@+id/textScenario_Scen4"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
