<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:text="Patient 1"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginStart="22dp"
        android:id="@+id/patient_one_Button"
        android:background="@drawable/my_personal_buttons"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Patient 2"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/patient_two_Button"
        style="@android:style/Widget.Button.Inset"
        android:background="@drawable/my_personal_buttons"
        android:elevation="0dp"
        android:layout_marginTop="78dp"
        android:layout_below="@+id/patient_one_Button"
        android:layout_alignStart="@+id/patient_one_Button" />

</RelativeLayout>