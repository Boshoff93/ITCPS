<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wiehan.kate_app_final.MainActivity">

    <Button
        android:text="Simple Scenario Advance\n(B)"
        android:id="@+id/buttonScen2"
        style="@android:style/Widget.DeviceDefault.Light.Button.Inset"
        android:background="@drawable/my_personal_buttons_flipped"
        android:textSize="18sp"
        android:layout_height="400dp"
        android:layout_alignParentEnd="true"
        android:layout_width="284dp" />

    <Button
        android:text="Five Patient Scenario Advance\n(D)"
        android:id="@+id/buttonScen4"
        style="@android:style/Widget.DeviceDefault.Light.Button.Inset"
        android:background="@drawable/my_personal_buttons"
        android:textSize="18sp"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/buttonScen1"
        android:layout_width="284dp" />

    <Button
        android:text="Simple Scenario \n(A)"
        android:id="@+id/buttonScen1"
        style="@android:style/Widget.DeviceDefault.Light.Button.Inset"
        android:background="@drawable/my_personal_buttons_flipped"
        android:textSize="18sp"
        android:layout_height="400dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="284dp" />

    <Button
        android:text="Five Patient Scenario\n(C)"
        android:id="@+id/buttonScen3"
        style="@android:style/Widget.DeviceDefault.Light.Button.Inset"
        android:background="@drawable/my_personal_buttons"
        android:textSize="18sp"
        android:layout_height="400dp"
        android:layout_width="284dp"
        android:layout_below="@+id/buttonScen1"
        android:layout_alignParentStart="true" />
</RelativeLayout>
