<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_two"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wiehan.kate_app_final.Activity_Two">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="View Vitals"
            android:id="@+id/viewVitalsButton"
            android:fontFamily="sans-serif-medium"
            style="@android:style/Widget.DeviceDefault.Light.Button.Inset"
            android:textSize="18sp"
            android:layout_below="@+id/PatientNotification"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="109dp"
            android:layout_width="225dp"
            android:layout_height="75dp"
            android:background="@drawable/my_personal_buttons"/>

        <TextView
            android:text="\n 2 Patients coming in from automobile accident. ETA: 20 minutes"
            android:id="@+id/PatientNotification"
            android:background="@drawable/my_personal_border"
            android:typeface="sans"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textAlignment="center"
            android:layout_width="450dp"
            android:layout_height="125dp"
            android:textSize="24sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</RelativeLayout>
