<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_two_scen_two"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.wiehan.kate_app_final.Activity_Two_ScenTwo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d8d8d8"
        android:layout_alignParentStart="true">

        <TextView
            android:text="\n 1 patient coming in from an automobile accident. ETA : 15 minutes"
            android:id="@+id/PatientNotificationScenTwo"
            android:background="@drawable/my_personal_border"
            android:typeface="sans"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textAlignment="center"
            android:layout_width="450dp"
            android:layout_height="125dp"
            android:textSize="24sp"
            android:layout_marginBottom="59dp"
            android:layout_above="@+id/viewVitalsButtonScenTwo"
            android:layout_centerHorizontal="true"
            android:textColor="#000000" />

        <Button
            android:text="View Vitals"
            android:id="@+id/viewVitalsButtonScenTwo"
            android:layout_height="75dp"
            style="@android:style/Widget.DeviceDefault.Light.Button.Inset"
            android:layout_width="225dp"
            android:background="@drawable/my_personal_buttons"
            android:textSize="18sp"
            android:layout_marginBottom="240dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="#000000" />
    </RelativeLayout>

</RelativeLayout>
