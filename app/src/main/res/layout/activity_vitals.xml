<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graphPulse"
        android:layout_height="50dp"
        android:layout_width="350dp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/graphBP"
        android:layout_alignStart="@+id/graphBP" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graphRR"
        android:layout_height="50dp"
        android:layout_width="350dp"
        android:layout_below="@+id/graphPulse"
        android:layout_alignStart="@+id/graphPulse"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="Temp"
        android:layout_height="50dp"
        android:id="@+id/textTemp"
        android:textSize="28sp"
        android:textStyle="normal|bold"
        android:textAlignment="viewStart"
        android:layout_alignTop="@+id/graphTemp"
        android:layout_alignStart="@+id/textPulse"
        android:layout_width="80dp" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graphBP"
        android:layout_width="350dp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/patient_two_Button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="52dp"
        android:layout_height="50dp" />

    <TextView
        android:text="BP"
        android:id="@+id/textBP"
        android:layout_height="50dp"
        android:layout_marginStart="55dp"
        android:layout_width="80dp"
        android:layout_alignTop="@+id/graphBP"
        android:layout_alignParentStart="true"
        android:textSize="28sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="120/80 "
        android:id="@+id/BBNum"
        android:layout_height="50dp"
        android:textSize="28sp"
        android:textStyle="normal|bold"
        android:layout_width="100dp"
        android:layout_alignBaseline="@+id/textBP"
        android:layout_alignBottom="@+id/textBP"
        android:layout_toStartOf="@+id/graphPulse"
        android:textAlignment="textEnd" />

    <TextView
        android:text="Pulse"
        android:id="@+id/textPulse"
        android:textSize="28sp"
        android:textStyle="normal|bold"
        android:textAlignment="viewStart"
        android:layout_weight="0.03"
        android:layout_height="50dp"
        android:layout_width="80dp"
        android:layout_alignTop="@+id/graphPulse"
        android:layout_alignStart="@+id/textBP" />

    <TextView
        android:text="70 "
        android:layout_height="50dp"
        android:id="@+id/pulseNum"
        android:textSize="28sp"
        android:textStyle="normal|bold"
        android:textAlignment="textEnd"
        android:layout_width="100dp"
        android:layout_alignBaseline="@+id/textPulse"
        android:layout_alignBottom="@+id/textPulse"
        android:layout_toStartOf="@+id/graphPulse" />

    <TextView
        android:text="RR"
        android:layout_height="50dp"
        android:textSize="28sp"
        android:textStyle="normal|bold"
        android:textAlignment="viewStart"
        android:id="@+id/textRR"
        android:layout_width="80dp"
        android:layout_alignBaseline="@+id/RRNum"
        android:layout_alignBottom="@+id/RRNum"
        android:layout_alignStart="@+id/textPulse"
        android:layout_alignEnd="@+id/textPulse" />

    <TextView
        android:text="98.6 "
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/tempNum"
        android:textStyle="normal|bold"
        android:textSize="28sp"
        android:textAlignment="textEnd"
        android:layout_alignBaseline="@+id/textTemp"
        android:layout_alignBottom="@+id/textTemp"
        android:layout_toStartOf="@+id/graphTemp" />

    <TextView
        android:text="18 "
        android:layout_width="100dp"
        android:id="@+id/RRNum"
        android:layout_height="50dp"
        android:textSize="28sp"
        android:textStyle="normal|bold"
        android:textAlignment="textEnd"
        android:layout_alignTop="@+id/graphRR"
        android:layout_alignStart="@+id/pulseNum" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graphTemp"
        android:layout_height="50dp"
        android:layout_width="350dp"
        android:layout_below="@+id/graphRR"
        android:layout_toEndOf="@+id/RRNum"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/summaryText"
        android:background="@drawable/my_personal_border"
        android:typeface="sans"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textAlignment="center"
        android:layout_width="450dp"
        android:textSize="24sp"
        android:layout_marginTop="37dp"
        android:layout_height="150dp"
        android:layout_below="@+id/textTemp"
        android:layout_alignStart="@+id/patient_one_Button" />

    <Button
        android:text="Patient 2"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/patient_two_Button"
        style="@android:style/Widget.Button.Inset"
        android:background="@drawable/my_personal_buttons"
        android:elevation="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/summaryText"
        android:layout_marginTop="18dp" />

    <Button
        android:text="Patient 1"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/patient_one_Button"
        style="@android:style/Widget.Button.Inset"
        android:background="@drawable/my_personal_buttons"
        android:elevation="0dp"
        android:layout_above="@+id/graphBP"
        android:layout_toStartOf="@+id/graphBP" />

    <Button
        android:text="Create Action Plan"
        android:id="@+id/buttonCAP"
        android:layout_height="75dp"
        style="@android:style/Widget.DeviceDefault.Light.Button.Inset"
        android:layout_width="225dp"
        android:background="@drawable/my_personal_buttons"
        android:textSize="18sp"
        android:layout_below="@+id/summaryText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />


</RelativeLayout>